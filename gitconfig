[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  quotepath = false
  editor = vim
  ff = only
  fileMode = false
  excludesfile = ~/.gitexcludes
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  cm = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p --abbrev-commit
  log = log --abbrev-commit
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lolauth = log --graph --decorate --pretty=short --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lolaauth = log --graph --decorate --pretty=short --abbrev-commit --all
  mg = merge --no-ff
  tags = tag --list
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  l1 = log --graph --decorate --pretty=oneline --abbrev-commit --stat -1
  l2 = log --graph --decorate --pretty=oneline --abbrev-commit --stat -2
  l3 = log --graph --decorate --pretty=oneline --abbrev-commit --stat -3
  l4 = log --graph --decorate --pretty=oneline --abbrev-commit --stat -4
  l5 = log --graph --decorate --pretty=oneline --abbrev-commit --stat -5
  l0 = log --graph --decorate --pretty=oneline --abbrev-commit --stat -10
[merge]
  tool = vimdiff
[mergetool]
	keepBackup = false
[rerere]
  enabled = 0
[branch]
  autosetupmerge = true
